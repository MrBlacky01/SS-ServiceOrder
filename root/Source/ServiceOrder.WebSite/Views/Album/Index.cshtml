@model ServiceOrder.ViewModel.ViewModels.Implementation.AlbumViewModels.AlbumViewModel
@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/jQuery-File-Upload")
<h2>Show</h2>
<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls" data-filter=":even">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>
<div id="links">
    @if (@Model.AlbumPhotos != null && @Model.AlbumPhotos.Any())
    {
        foreach (var file in @Model.AlbumPhotos)
        {        
            <a href="@Url.Action("Get","Photo",new {photoId = file.Id})" title="@file.FileName" ><img src="@($"data:image/gif;base64,{file.PhotoImage}")" alt="@file.FileName" class="imageThumbnailSize"></a>            
        }
    }
    else
    {
    <p>No files</p>
    }
    <!--Your files goes here-->
</div>
<script>

    document.getElementById('links').onclick = function (event) {
        event = event || window.event;
        var target = event.target || event.srcElement,
            link = target.src ? target.parentNode : target,
            options = { index: link, event: event },
            links = this.getElementsByTagName('a');
        blueimp.Gallery(links, options);
    };
</script>
@Scripts.Render("~/bundles/Blueimp-Gallerry2")
