@model IEnumerable<ServiceOrder.ViewModel.ViewModels.Implementation.ServiceCategoryViewModels.ServiceCategoryEntityViewModel>

@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.Id }) |
            @Html.ActionLink("Details", "DetailCategory", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.Id })
        </td>
    </tr>
}

</table>
