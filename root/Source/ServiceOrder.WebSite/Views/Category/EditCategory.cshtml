@model ServiceOrder.ViewModel.ViewModels.Implementation.ServiceCategoryViewModels.ServiceCategoryEntityViewModel

@{
    ViewBag.Title = "EditCategory";
}

<h2>Edit Category</h2>


<div class="row">
    @using (Html.BeginForm("EditCategory", "Category", FormMethod.Post, new { @class = "category-create-form col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">


            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label edit-title" })

            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control edit-input-with-label" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })


            <input type="submit" value="Save" class="btn btn-default " />
        </div>
    }
</div>


<div class="btn btn-default">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
