@model ServiceOrder.ViewModel.ViewModels.Implementation.RegionViewModels.RegionEntityViewModel

@{
    ViewBag.Title = "Create Region";
}

<h2>Create Region</h2>


<div class="row">
    @using (Html.BeginForm("Create", "Region", FormMethod.Post, new { @class = "category-create-form col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-10"}))
    {
        @Html.AntiForgeryToken()

        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Region Title" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="submit" value="Create" class="btn btn-default" />

    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index",null,new {@class="btn btn-default"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
